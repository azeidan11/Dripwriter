generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String        @id @default(cuid())
  email           String        @unique
  plan            Plan          @default(FREE)
  tz              String?
  createdAt       DateTime      @default(now())
  name            String?
  gAccessToken    String?
  gAccessTokenExp Int?
  gRefreshToken   String?
  DailyUsages     DailyUsage[]
  DripSessions    DripSession[]
}

model DailyUsage {
  id        String @id @default(cuid())
  userId    String
  dateKey   String
  wordsUsed Int    @default(0)
  user      User   @relation(fields: [userId], references: [id])

  @@unique([userId, dateKey])
}

model DripSession {
  id          String     @id @default(cuid())
  userId      String
  startedAt   DateTime   @default(now())
  createdAt   DateTime   @default(now())
  docId       String
  doneWords   Int        @default(0)
  durationMin Int
  endsAt      DateTime
  lastError   String?
  nextAt      DateTime
  status      DripStatus @default(RUNNING)
  text        String
  totalWords  Int
  updatedAt   DateTime   @updatedAt
  idx         Int        @default(0)
  user        User       @relation(fields: [userId], references: [id])

  @@index([status, nextAt])
  @@index([userId])
}

enum Plan {
  FREE
  STARTER
  PRO
  DAYPASS
  DEV
}

enum DripStatus {
  RUNNING
  PAUSED
  DONE
  ERROR
  CANCELED
}
